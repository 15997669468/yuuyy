      xcodeproj: "Yattee.xcodeproj",
      target: "Yattee (macOS)"
    )

    build_app(
      scheme: "Yattee (macOS)",
      output_directory: "fastlane/builds/#{version}-#{build}/macOS",
      output_name: "Yattee-#{version}-macOS.app",
